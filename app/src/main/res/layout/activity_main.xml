<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    tools:context=".MainActivity"

    android:theme="@android:style/Theme.NoTitleBar.Fullscreen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="#2b2b2b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:radius="5dp"
            android:topRightRadius="100dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#3e3e3e"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:textColor="#FFE6E6E6"
                android:textSize="18sp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#646464"
                android:gravity="end"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#e6e6e6"
                android:textSize="30sp"
                android:layout_marginTop="12dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="13.30"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonequal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="13.30"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="="
                        app:backgroundTint="@color/colorAccent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="13.30"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonac"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="AC"
                        app:backgroundTint="@color/colorAccent" />

                    <Button
                        android:id="@+id/buttonc"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="C"
                        app:backgroundTint="@color/colorAccent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/buttonplmin"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="+/-" />

                <Button
                    android:id="@+id/buttonsqrt"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="\u221A" />

                <Button
                    android:id="@+id/buttonpow"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="^" />

                <Button
                    android:id="@+id/buttondot"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout5"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/buttonplus"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="+" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="1"
                    app:backgroundTint="@color/colorPrimaryLight" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="2"
                    app:backgroundTint="@color/colorPrimaryLight" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="3"
                    app:backgroundTint="@color/colorPrimaryLight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout6"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/buttonmin"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="-" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="4"
                    app:backgroundTint="@color/colorPrimaryLight" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="5"
                    app:backgroundTint="@color/colorPrimaryLight" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="6"
                    app:backgroundTint="@color/colorPrimaryLight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout7"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <Button
                    android:id="@+id/buttonmul"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="*" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="7"
                    app:backgroundTint="@color/colorPrimaryLight" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="8"
                    app:backgroundTint="@color/colorPrimaryLight" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetLeft="6dp"
                    android:insetRight="6dp"
                    android:text="9"
                    app:backgroundTint="@color/colorPrimaryLight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout8"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttondiv"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="/" />

                    <Button
                        android:id="@+id/button00"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="00"
                        app:backgroundTint="@color/colorPrimaryLight" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="12.90"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:text="0"
                        app:backgroundTint="@color/colorPrimaryLight" />
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>